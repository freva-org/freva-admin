{# --------------------------- #
#  Variables & Preprocessing   #
# --------------------------- #}
{%- set ns = project_name | default('freva') -%}
{%- set ann = ingress.annotations | default({}, true) -%}
{# Filter ingress_hosts that have TLS enabled #}
{%- set tls_hosts = ingress_hosts
      | selectattr('tls', 'defined')
      | selectattr('tls')
      | list
-%}
{# Group TLS hosts by secret so you can have multiple certs #}
{%- set tls_groups = tls_hosts | groupby('tls_secret') -%}

---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: {{ ns }}-ingress
  namespace: {{ ns }}
  labels:
    app.kubernetes.io/part-of: {{ ns }}
    app.kubernetes.io/managed-by: ansible
{% if ann %}
  annotations:
{% for k, v in ann | dictsort %}
    {{ k }}: {{ v }}
{% endfor %}
{% endif %}

spec:
  ingressClassName: {{ ingress.class_name | default('nginx') }}

{% if tls_hosts %}
  tls:
{%   for group in tls_groups %}
    - secretName: {{ group.grouper | default(tls_secret) }}
      hosts:
{%     for item in group.list %}
        - {{ item.fqdn }}
{%     endfor %}
{%   endfor %}
{% endif %}

  rules:
{% for item in ingress_hosts %}
    - host: {{ item.fqdn }}
      http:
        paths:
          - path: {{ item.path | default('/') }}
            pathType: Prefix
            backend:
              service:
                name: {{ item.service }}
                port:
                  number: {{ item.port }}
{% endfor %}
